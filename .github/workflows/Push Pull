name: Push and Pull Request
on: [push, pull_request]

env:
  mpush: "C'est un push !"
  mpull: "C'est une pull request !"
  
jobs:
  push_ci:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Push Request
        run: $mpush

  pull_request_ci:
    runs-on: ubuntu-latest
    if: ${{ github.event_name == 'pull_request' }}
    steps:
      - uses: actions/checkout@v3
      - name: Run PR CI
        run: $mpull
